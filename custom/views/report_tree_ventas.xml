<odoo>
  <data>
    <record id="search_custom_insoltecsa_ventas" model="ir.ui.view">
        <field name="name">vista.search</field>
        <field name="model">custom_insoltecsa.vista_ventas</field>
        <field name="arch" type="xml">
            <search>
                    <field name="id_invoice" />
            </search>
        </field>
    </record>

    <!-- view -->
    <record model="ir.ui.view" id="custom_insoltecsa.ventas_tree">
      <field name="name">custom_insoltecsa.ventas.tree</field>
      <field name="model">custom_insoltecsa.vista_ventas</field>
      <field name="arch" type="xml">
        <tree>
            <field name="id_invoice"/>
            <field name="pedido"/>
            <field name="tipo"/>
            <field name="factura"/>
            <field name="fecha_factura"/>
            <field name="referencia"/>
            <field name="equipo_ventas"/>
            <field name="pais"/>
            <field name="codigo_cliente"/>
            <field name="cliente"/>
            <field name="nit"/>
            <field name="sku"/>
            <field name="ean"/>
            <field name="nombre_sku"/>
            <field name="categoria"/>
            <field name="cantidad"/>
            <field name="precio_unitario"/>
            <field name="descuento_p"/>
            <field name="total_linea"/>
            <field name="sub_total"/>
            <field name="usuario"/>
        </tree>
      </field>
    </record>

    <!-- acciones -->
    <record model="ir.actions.act_window" id="custom_insoltecsa.log_action_window">
      <field name="name">Reporte de ventas</field>
      <field name="res_model">custom_insoltecsa.vista_ventas</field>
      <field name="view_mode">tree</field>
      <field name="view_type">tree</field>
    </record>

    <!-- menu root -->
    <menuitem name="rep.ventas" 
              id="sale.sale_report_id" 
              parent="sale.sale_menu_root"
              sequence="1"
              action="custom_insoltecsa.log_action_window"/>
    <!-- menu item -->
    
  

  </data>
</odoo>